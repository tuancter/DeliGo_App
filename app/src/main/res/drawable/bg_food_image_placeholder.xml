<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền xám nhạt khi chưa có ảnh -->
    <solid android:color="#EEEEEE" />

    <!-- Bo góc nhẹ để trông mềm mại -->
    <corners android:radius="8dp" />

    <!-- Viền mỏng màu xám -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Bóng nhẹ (chỉ có tác dụng trên Android 9+) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
