<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Material Components Theme for DeliGo (Material Design 3 compatible) -->
    <style name="Theme.DeliGo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/deligo_primary</item>
        <item name="colorPrimaryVariant">@color/deligo_primary_dark</item>
        <item name="colorOnPrimary">@color/deligo_on_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/deligo_secondary</item>
        <item name="colorSecondaryVariant">@color/deligo_secondary_dark</item>
        <item name="colorOnSecondary">@color/deligo_on_secondary</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/deligo_error</item>
        <item name="colorOnError">@color/deligo_on_error</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/deligo_background</item>
        
        <!-- Surface Colors (Material Components requires this) -->
        <item name="colorSurface">@color/deligo_surface</item>
        <item name="colorOnSurface">@color/deligo_on_surface</item>
        
        <!-- Text Colors (using Android system colors) -->
        <item name="android:textColorPrimary">@color/deligo_text_primary</item>
        <item name="android:textColorSecondary">@color/deligo_text_secondary</item>
        
        <!-- Window Colors -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Material Components attributes -->
        <item name="materialCardViewStyle">@style/Widget.DeliGo.CardView</item>
        <item name="buttonStyle">@style/Widget.DeliGo.Button</item>
        <item name="materialButtonStyle">@style/Widget.DeliGo.Button</item>
    </style>
    
    <!-- CardView Style with DeliGo colors -->
    <style name="Widget.DeliGo.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/deligo_surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- Button Style with DeliGo colors -->
    <style name="Widget.DeliGo.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/deligo_primary</item>
        <item name="android:textColor">@color/deligo_on_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- Outlined Button Style -->
    <style name="Widget.DeliGo.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/deligo_primary</item>
        <item name="android:textColor">@color/deligo_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <!-- Text Button Style -->
    <style name="Widget.DeliGo.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/deligo_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- FAB Style -->
    <style name="Widget.DeliGo.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/deligo_secondary</item>
        <item name="tint">@color/deligo_on_secondary</item>
        <item name="elevation">6dp</item>
    </style>
</resources>

