<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deligo_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:contentDescription="Avatar"
            android:background="@drawable/bg_avatar_circle"
            android:padding="16dp"
            app:tint="@color/deligo_icon_muted"
            android:layout_marginBottom="12dp" />

        <!-- Tên -->
        <TextView
            android:id="@+id/textFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/deligo_text_primary" />

        <!-- Email -->
        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/deligo_text_secondary"
            android:drawableStart="@drawable/ic_email_16"
            android:drawablePadding="6dp" />

        <!-- SĐT -->
        <TextView
            android:id="@+id/textPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/deligo_text_secondary"
            android:drawableStart="@drawable/ic_phone_16"
            android:drawablePadding="6dp" />

        <!-- Địa chỉ (nếu có) -->
        <TextView
            android:id="@+id/textAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/deligo_text_secondary"
            android:visibility="gone"
            android:maxLines="2" />

        <!-- Tên cửa hàng (chỉ owner) -->
        <TextView
            android:id="@+id/textStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/deligo_text_secondary"
            android:visibility="gone"
            android:maxLines="2" />

        <!-- Vai trò + trạng thái -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/deligo_primary"
                android:textStyle="bold"
                android:background="@drawable/bg_chip_outline"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Role" />

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/deligo_on_success"
                android:background="@drawable/bg_chip_filled"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Status" />
        </LinearLayout>

        <!-- Nhóm button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa"
                style="@style/Widget.DeliGo.Button.Text" />

            <Button
                android:id="@+id/buttonChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Đổi mật khẩu"
                style="@style/Widget.DeliGo.Button.Text" />

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/logout"
                style="@style/Widget.DeliGo.Button.Text"
                android:textColor="@color/deligo_error" />
        </LinearLayout>

        <TextView
            android:id="@+id/textError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/deligo_error"
            android:visibility="gone"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
