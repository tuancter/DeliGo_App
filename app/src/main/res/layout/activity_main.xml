<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ảnh nền toàn màn hình -->
    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name" />

    <!-- Nội dung cũ của bạn (giữ nguyên gravity, padding, orientation) -->
    <LinearLayout
        android:id="@+id/content_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/welcome_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:textColor="@color/deligo_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/database_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/database_initializing"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/deligo_text_secondary" />

    </LinearLayout>

</FrameLayout>
